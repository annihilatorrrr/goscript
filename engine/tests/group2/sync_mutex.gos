package main

import (
    "fmt2"
    "sync"
)

type Container struct {
    counters map[string]int
    mu       sync.Mutex
}


func (c *Container) inc(name string) {

    c.mu.Lock()
    defer c.mu.Unlock()
    c.counters[name] +=100
}


